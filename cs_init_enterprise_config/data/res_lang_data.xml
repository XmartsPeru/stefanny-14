<odoo noupdate='1'>

<!-- Languages -->

<record id="base.lang_en" model="res.lang">
 <field name="name">English (US)</field>
 <field name="active" eval="True"/>
 <field name="date_format">%d/%m/%Y</field>
 <field name="time_format">%H:%M:%S</field>
 <field name="decimal_point">.</field>
 <field name="thousands_sep">,</field>
 <field name="grouping">[3,0]</field>
 <field name="week_start">1</field>
</record>

<record id="base.lang_es" model="res.lang">
 <field name="name">Spanish / Español</field>
 <field name="active" eval="False"/>
 <field name="date_format">%d/%m/%Y</field>
 <field name="time_format">%H:%M:%S</field>
 <field name="decimal_point">.</field>
 <field name="thousands_sep">,</field>
 <field name="grouping">[3,0]</field>
 <field name="week_start">1</field>
</record>

<record id="base.lang_es_PE" model="res.lang">
 <field name="name">Spanish (PE) / Español (PE)</field>
 <field name="active" eval="True"/>
 <field name="date_format">%d/%m/%Y</field>
 <field name="time_format">%H:%M:%S</field>
 <field name="decimal_point">.</field>
 <field name="thousands_sep">,</field>
 <field name="grouping">[3,0]</field>
 <field name="week_start">1</field>
</record>

</odoo>
